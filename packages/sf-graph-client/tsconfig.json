{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "lib": ["esnext"]
  },
  "include": ["src", "jest.config.ts"],
  "exclude": ["node_modules/**/*", "src/**/*test.tsx"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
