{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["dist", "examples", "**/*.test.ts", "**/*.test.js"],
  "typedocOptions": {
    "entryPoints": ["src"],
    "out": "docs"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
