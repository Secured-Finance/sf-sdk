{
    "root": true,
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest": true,
        "es2020": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "error",
      "no-return-await": "warn",
      "eqeqeq": "warn",
      "no-eq-null": "warn",
      "unicorn/filename-case": "off",
      "max-statements-per-line": "warn",
      "no-console": ["warn", { "allow": ["error"] }]
    }
}
