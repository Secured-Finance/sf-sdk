{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "packages/sf-client/src",
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "strictNullChecks": false,
    "allowJs": true,
    "checkJs": true,
  },
  "include": [
    "packages/sf-client/src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}